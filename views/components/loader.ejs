<div id="loader" style="
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.7;
  background-color: #fff;
  z-index: 99;">
  <i style="z-index: 100;" class="md-spinner md-spinner--80 md-spinner--black"></i>
</div>

<script>
  //ajax configuration for showing/hidding loading animation when ajax Start/Stop
  var $loader = $('#loader').hide();
  $(document)
    .ajaxStart(function () {
      $loader.show();
    })
    .ajaxStop(function () {
      $loader.hide();
    });
  //end configuration
</script>